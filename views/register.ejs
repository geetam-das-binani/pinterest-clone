<%- include ("./partials/header") %>

<div
  class="w-full h-screen bg-[url('https://images.unsplash.com/photo-1682687982046-e5e46906bc6e?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDF8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')] flex items-center justify-center bg-center bg-cover"
>
  <div class="w-[35vw] bg-white px-20 py-10 rounded-[1.8rem]">
    <h1
      class="text-3xl mb-10 text-center font-semibold text-zinc-700 leading-none tracking-tighter capitalize"
    >
      Create New Account
    </h1>
    <% if (message.length > 0) { %>
      <div style="color: red">
        <%= message[0] %>
      </div>
    <% } %>
    <form action="/register" method="post" enctype="multipart/form-data">
      <input
      class="mt-2 block w-full px-3 py-2 bg-white border border-slate-300 rounded-md text-sm shadow-sm placeholder-slate-400 focus:outline-none focus:border-sky-500 focus:ring-1 focus:ring-sky-500"
        type="text"
        name="username"
        placeholder="Username"
      />
      <input
      class="mt-2 block w-full px-3 py-2 bg-white border border-slate-300 rounded-md text-sm shadow-sm placeholder-slate-400 focus:outline-none focus:border-sky-500 focus:ring-1 focus:ring-sky-500"
        type="text"
        name="name"
        placeholder="Full name"
      />
      <input
      class="mt-2 block w-full px-3 py-2 bg-white border border-slate-300 rounded-md text-sm shadow-sm placeholder-slate-400 focus:outline-none focus:border-sky-500 focus:ring-1 focus:ring-sky-500"
        type="email"
        name="email"
        placeholder="Email"
      />
      <input
      class="mt-2 block w-full px-3 py-2 bg-white border border-slate-300 rounded-md text-sm shadow-sm placeholder-slate-400 focus:outline-none focus:border-sky-500 focus:ring-1 focus:ring-sky-500"
        type="number"
        name="contact"
        placeholder="Contact"
      />
      <input
      class="mt-2 block w-full px-3 py-2 bg-white border border-slate-300 rounded-md text-sm shadow-sm placeholder-slate-400 focus:outline-none focus:border-sky-500 focus:ring-1 focus:ring-sky-500"
        type="password"
        name="password"
        placeholder="Password"
      />

      <div class="mt-2">
        <label
          for="fileInput"
          class="cursor-pointer inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-md"
        >
          Upload profile Picture
        </label>
        <input
          type="file"
          id="fileInput"
          class="hidden"
          type="file"
          name="profilePic"
        />
      </div>
      <input
        class="block mt-5 w-full py-3 py-2 bg-red-600 text-white rounded-full  hover:bg-red-700"
        type="submit"
        value="Create New Account"
      />
     
    </form>
    <a
      class="inline-block mt-7 text-sm font-semiblod text-zinc-700 text-center w-full hover:text-red-600"
      href="/"
      >Login Existing Account</a
    >
  </div>
</div>

<%- include ("./partials/footer") %>
