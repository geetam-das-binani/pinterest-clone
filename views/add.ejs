<%- include ("./partials/header") %>

<div class="text-white w-full min-h-screen bg-zinc-800 px-10 py-5">
  <h1 class="text-x1">Create New Post</h1>
  <hr class="opacity-10 mt-3" />
  <form action="/createpost"  method="post" enctype="multipart/form-data">
    <input class=" block w-1/3 px-3 py-2 " type="file" name="postImage"  />
    <input
      class="block  text-black w-1/3 px-3 py-2 mt-2 rounded-md "
      type="text"
      placeholder="Title"
      name="title"
    />
    <textarea
    
      class="block  text-black w-1/3 px-3 py-2 mt-2 rounded-md h-60"
      type="text"
      placeholder="Description"
      name="description"
    ></textarea>
    <input class="block   w-1/3 px-3 mt-2 py-2  rounded-md bg-red-700" type="submit" value="Create Post" />
  </form>
</div>
<%- include ("./partials/footer") %>
